#:kivy 1.0.9

<HeadunitWidget>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.x, self.y
            size: self.width, self.height
            source: 'assets/background.jpg'

    Label:
        font_name: 'assets/fonts/Lato-Black'
        font_size: dp(160)
        center_x: root.width / 2
        center_y: (root.height / 2) + dp(72)
        text: '[color=f0f0f0]' + str(root.time) + '[/color]'
        markup: True

    Label:
        font_name: 'assets/fonts/Lato-Regular'
        font_size: dp(30)
        center_x: root.width / 2
        center_y: (root.height / 2) - dp(24)
        text: '[color=f0f0f0]' + str(root.date) + '[/color]'
        markup: True
