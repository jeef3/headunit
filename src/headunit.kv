#:kivy 1.0.9

<HeadunitWidget>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        font_name: 'assets/fonts/Lato-Black'
        font_size: dp(160)
        center_x: root.width / 2
        center_y: (root.height / 2) + dp(72)
        text: '[color=f0f0f0]' + str(root.time) + '[/color]'
        markup: True

    Label:
        font_name: 'assets/fonts/Lato-Regular'
        font_size: dp(36)
        center_x: root.width / 2
        center_y: (root.height / 2) - dp(24)
        text: '[color=f0f0f0]' + str(root.date) + '[/color]'
        markup: True

    Label:
        font_size: dp(16)
        center_x: root.width / 2
        bottom: 0
        text: root.screen_resolution

    Label:
        font_size: dp(16)
        center_x: root.width / 2
        center_y: dp(64)
        text: root.temp
